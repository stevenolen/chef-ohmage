# Generated by Chef for <%= node['fqdn'] %>
#
# DATABASE
#
db.driver=com.mysql.jdbc.Driver
db.jdbcurl=jdbc:mysql://<%= @resource.db_host %>:<%= @resource.db_port %>/<%= @resource.db_name %>?characterEncoding=utf8
db.username=<%= @resource.db_user %>
db.password=<%= @resource.db_password %>
#
# LOGGING
#
# The root logger 
log4j.rootLogger=<%= @resource.log_level %>, root, server
log4j.appender.root=org.apache.log4j.DailyRollingFileAppender
log4j.appender.root.File=<%= @resource.log_dir %>/ohmage.log
log4j.appender.root.layout=org.apache.log4j.PatternLayout
# Formatting of logging messages
log4j.appender.root.layout.ConversionPattern=%d [%t] [%x] [%p] [%c] - %m%n
# Set log level based on Java package name (impacts root logger)
log4j.logger.org.ohmage=<%= @resource.log_level %>
log4j.logger.org.springframework=<%= @resource.log_level %>
log4j.logger.org.ohmage.util.JsonUtils=<%= @resource.log_level %>
log4j.logger.org.ohmage.cache.UserBin=<%= @resource.log_level %>
