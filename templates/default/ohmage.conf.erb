# Generated by Chef for <%= node[:fqdn] %>
#
# DATABASE
#
db.driver=com.mysql.jdbc.Driver
db.jdbcurl=jdbc:mysql://<%= node['ohmage']['db']['host'] %>:<%= node['ohmage']['db']['port'] %>/<%= node['ohmage']['db']['name'] %>?characterEncoding=utf8
db.username=<%= node['ohmage']['db']['user'] %>
db.password=<%= node['ohmage']['db']['password'] %>
#
# LOGGING
#
# The root logger 
log4j.rootLogger=<%= node['ohmage']['log_level'] %>, root, server
log4j.appender.root=org.apache.log4j.DailyRollingFileAppender
log4j.appender.root.File=<%= node['ohmage']['log_dir'] %>/ohmage.log
log4j.appender.root.layout=org.apache.log4j.PatternLayout
# Formatting of logging messages
log4j.appender.root.layout.ConversionPattern=%d [%t] [%x] [%p] [%c] - %m%n
# Set log level based on Java package name (impacts root logger)
log4j.logger.org.ohmage=<%= node['ohmage']['log_level'] %>
log4j.logger.org.springframework=<%= node['ohmage']['log_level'] %>
log4j.logger.org.ohmage.util.JsonUtils=<%= node['ohmage']['log_level'] %>
log4j.logger.org.ohmage.cache.UserBin=<%= node['ohmage']['log_level'] %>